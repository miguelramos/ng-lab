{
  "increment": "conventional:angular",
  "scripts": {
    "beforeStage": "conventional-changelog -p angular -i CHANGELOG.md -s && npm run build && ./tools/scripts/publish.sh ${version}"
  },
  "git": {
    "tagName": "v${version}",
    "commit": false,
    "commitMessage": "release: ${version}",
    "commitArgs": "-S",
    "tag": false,
    "tagAnnotation": "release ${version}",
    "tagArgs": "",
    "push": false
  },
  "github": {
    "release": false,
    "tokenRef": "GH_TOKEN",
    "releaseName": "Release ${version}"
  },
  "npm": {
    "publish": false
  }
}
