{
  "increment": "conventional:angular",
  "scripts": {
    "beforeStage": "tools/scripts/publish.sh ${version}"
  },
  "git": {
    "tagName": "v${version}",
    "commit": true,
    "commitMessage": "release: ${version}",
    "commitArgs": "-S --no-verify",
    "tag": true,
    "tagAnnotation": "Packages released with version: ${version}",
    "tagArgs": "-S",
    "push": true
  },
  "github": {
    "release": true,
    "tokenRef": "GH_TOKEN",
    "releaseName": "Release ${version}",
    "assets": [
      "dist/libs/configurator/*.tgz",
      "dist/libs/hub/*.tgz",
      "dist/libs/jwt/*.tgz",
      "dist/libs/responsive/*.tgz",
      "dist/libs/support/*.tgz",
      "dist/libs/http-url/*.tgz",
      "dist/libs/http-script/*.tgz"
    ]
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
