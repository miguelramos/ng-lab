{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@ng-lab/support": ["libs/support/src/index.ts"],
      "@ng-lab/configurator": ["libs/configurator/src/index.ts"],
      "@ng-lab/hub": ["libs/hub/src/index.ts"],
      "@ng-lab/responsive": ["libs/responsive/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
