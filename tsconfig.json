{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@ng-lab/support": ["libs/support/src/index.ts"],
      "@ng-lab/configurator": ["libs/configurator/src/index.ts"],
      "@ng-lab/hub": ["libs/hub/src/index.ts"],
      "@ng-lab/responsive": ["libs/responsive/src/index.ts"],
      "@ng-lab/jwt": ["libs/jwt/src/index.ts"],
      "@ng-lab/http/url": ["libs/http/url/src/index.ts"],
      "@ng-lab/http/script": ["libs/http/script/src/index.ts"],
      "@ng-lab/layout": ["libs/layout/src/index.ts"],
      "@ng-lab/app/*": ["apps/ng-lab-demo/src/*"],
      "@ng-lab/journey": ["libs/journey/src/index.ts"]
    },
    "rootDir": "."
  },
  "exclude": ["node_modules", "tmp"]
}
